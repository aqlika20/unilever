                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        style="@style/Card.Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="8dp"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/photo_profile"
                                    android:layout_width="130dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginHorizontal="3dp"
                                    android:layout_weight="0"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_baseline_person_24" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="3dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="10dp">

                                <TextView
                                    style="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/nik"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvNik"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/loading"
                                    android:textColor="@color/default_text_view_color"/>

                                <TextView
                                    style="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/nama_lengkap"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvNama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/loading"
                                    android:textColor="@color/default_text_view_color"/>

                                <TextView
                                    style="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/tempat_tanggal_lahir"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/tvTtl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="@string/loading"
                                    android:textColor="@color/default_text_view_color"/>


                                <!--                                <TextView-->
                                <!--                                    android:layout_marginTop="10dp"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    style="@style/TextLabel"-->
                                <!--                                    android:text="@string/alamat"/>-->
                                <!--                                <TextView-->
                                <!--                                    android:id="@+id/alamat"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    android:text="@string/loading"/>-->

                                <!--                                <TextView-->
                                <!--                                    android:layout_marginTop="10dp"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    style="@style/TextLabel"-->
                                <!--                                    android:text="@string/rt_rw"/>-->
                                <!--                                <TextView-->
                                <!--                                    android:id="@+id/rtRw"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    android:text="@string/loading"/>-->

                                <!--                                <TextView-->
                                <!--                                    android:layout_marginTop="10dp"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    style="@style/TextLabel"-->
                                <!--                                    android:text="@string/kel_desa"/>-->
                                <!--                                <TextView-->
                                <!--                                    android:id="@+id/kelDesa"-->
                                <!--                                    android:layout_width="match_parent"-->
                                <!--                                    android:layout_height="wrap_content"-->
                                <!--                                    android:text="@string/loading"/>-->


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/Card.Container"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etNoTelp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_detail"
                                    android:drawableEnd="@drawable/ic_baseline_call_24"
                                    android:hint="@string/nomor_telepon"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:paddingHorizontal="20dp"
                                    android:textColor="@color/irul_text"/>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/Card.Container"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/lftsuccess1"
                                android:layout_width="15dp"
                                android:layout_height="70dp"
                                android:layout_weight="0"
                                android:src="@drawable/biru"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unlftsuccess1"
                                android:layout_width="15dp"
                                android:layout_height="70dp"
                                android:layout_weight="0"
                                android:src="@drawable/red"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="3dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="10dp">

                                <TextView
                                    style="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_vaksin_1"
                                    android:textColor="@color/default_text_view_color"/>

                                <TextView
                                    android:id="@+id/tvVaksin1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/loading"
                                    android:textColor="@color/default_text_view_color"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/successVaksin1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_check_blue"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/unsuccessVaksin1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_check_red"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/statVaksin1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/loading"
                                    android:textAlignment="center"
                                    android:textColor="@color/default_text_view_color"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/Card.Container"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/lftsuccess2"
                                android:layout_width="15dp"
                                android:layout_height="70dp"
                                android:layout_weight="0"
                                android:src="@drawable/biru"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/unlftsuccess2"
                                android:layout_width="15dp"
                                android:layout_height="70dp"
                                android:layout_weight="0"
                                android:src="@drawable/red"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="3dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingLeft="10dp">

                                <TextView
                                    style="@style/TextLabel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/status_vaksin_2"
                                    android:textColor="@color/default_text_view_color"/>

                                <TextView
                                    android:id="@+id/tvVaksin2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/loading"
                                    android:textColor="@color/default_text_view_color"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="3dp"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/successVaksin2"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_check_blue"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/unsuccessVaksin2"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/ic_check_red"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/statVaksin2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/loading"
                                    android:textAlignment="center"
                                    android:textColor="@color/default_text_view_color"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/tujuan"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvDestination"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                </LinearLayout>


                <!--                </androidx.cardview.widget.CardView>-->

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button"
                    android:fontFamily="sans-serif-black"
                    android:text="@string/submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>



    </RelativeLayout>
</layout>